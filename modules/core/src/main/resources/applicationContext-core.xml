<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
                           http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.1.xsd">

    <context:annotation-config/>
    <context:spring-configured/>

    <context:component-scan base-package="org.openlmis.core"/>

    <import resource="classpath*:applicationContext-db.xml"/>

    <bean id="persistenceHandlerMap" class="java.util.HashMap">
        <constructor-arg>
            <map>
                <entry key="product" value-ref="productPersistenceHandler"/>
                <entry key="facility" value-ref="facilityPersistenceHandler"/>
                <entry key="programSupported" value-ref="programSupportedPersistenceHandler"/>
                <entry key="requisitionGroup" value-ref="requisitionGroupPersistenceHandler"/>
            </map>
        </constructor-arg>
    </bean>
</beans>